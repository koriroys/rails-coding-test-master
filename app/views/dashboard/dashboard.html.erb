<h2>Sales Summary For the Week of
<%= @day %> to <%= @day + 6.days %>
</h2>

<%= link_to "Previous Week", date_dashboard_path(@day - 1.week) %>
<%= link_to "Next Week", date_dashboard_path(@day + 1.week)  %>
<%= link_to "Current Week", dashboard_path %>
<table>
  <thead>
    <tr>
      <th>Product Id</th>
      <th>Product Name</th>
      <th>Quantity Sold</th>
    </tr>
  </thead>
  <tbody>
    <% @products_sold_count.each do |product, quantity_sold| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= quantity_sold %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<table>
  <thead>
    <tr>
      <th>Item Id</th>
      <th>Item Name</th>
      <th>Quantity Sold</th>
    </tr>
  </thead>
  <tbody>
    <% @items_sold_count.each do |item, count| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<table>
  <thead>
    <tr>
      <th># of Orders</th>
      <th># of Customers</th>
      <th>Percentage</th>
    </tr>
  </thead>
  <tbody>
    <% @orders_count.each do |order_count, customer_count| %>
      <tr>
        <td><%= pluralize(order_count, "order") %></td>
        <td><%= customer_count %></td>
        <td><%= number_to_percentage((customer_count.to_f / @total_orders) * 100, precision: 0) %></td>
      </tr>
    <% end %>
  </tbody>
</table>